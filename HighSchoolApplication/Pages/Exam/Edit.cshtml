@page
@model HighSchoolApplication.Pages.Exam.EditModel
@{
}
@if (Model.IsSuccess)
{
	 <div class="alert alert-success">
		You created a new exam with a score of @Model.Score
    </div>
    <div>
        <a class="btn btn-primary " asp-page="./Edit">Add a New Exam</a>
        <a class="btn btn-primary " asp-page="/Exam/Index">Return to Exams Page</a>
    </div>
}
else
{
	<form method="post">
		<div asp-validation-summary="All"></div>

		<div class="form-group">
			<label asp-for="StudentId"></label>
			<br />
			<select asp-for="StudentId" class="form-control" asp-items=" Model.StudentNames">
			</select>
			<br />
		</div>
		<div class="form-group">
			<label asp-for="Score"></label>
			<br />
			<input asp-for="Score" class="form-control" type="number" />
			<br />
			<input asp-for="ExamId" type="hidden" />
		</div>

		<div class="form-group">
			<button class=" btn btn-primary">Submit</button>
		</div>
	</form>
}