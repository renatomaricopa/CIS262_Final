@page
@model HighSchoolApplication.Pages.Student.DeleteModel
@{
}
@if (Model.IsSuccess)
{
     <div class="alert alert-success">
        You succesfully deleted id @Model.Id
    </div>
    <div>
        <a class="btn btn-primary " asp-page="./Edit">Add a New Student</a>
        <a class="btn btn-primary " asp-page="/Student/Index">Return to Student Page</a>
    </div>

}
else
{
    <div class="alert alert-success">
        There was an issue deleting id @Model.Id
    </div>
    <div>
        <a class="btn btn-primary " asp-page="./Edit">Add a New Student</a>
        <a class="btn btn-primary " asp-page="/Student/Index">Return to Student Page</a>
    </div>
}
