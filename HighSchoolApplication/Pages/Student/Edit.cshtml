@page
@model HighSchoolApplication.Pages.Student.EditModel
@{
}
@if (Model.IsSuccess)
{
    <div class="alert alert-success">
        You created a new entry: @Model.FirstName @Model.LastName
    </div>
    <div>
        <a class="btn btn-primary " asp-page="./Edit">Add a New Student</a>
        <a class="btn btn-primary " asp-page="/Student/Index">Return to Student Page</a>
    </div>
}
else
{
         <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="FirstName">First Name:</label><br />
                <input asp-for="FirstName" class="form-control" /><br />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name:</label><br />
                <input asp-for="LastName" class="form-control" /><br />
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
}